@model Login

<div class="container">
    <h1 class="text-center">Login</h1>
    <form action="/login" method="post" class="form-container">
        <div class="form-group">
            <label asp-for="LoginEmail"></label>
            <input asp-for="LoginEmail" class="form-control">
            <span asp-validation-for="LoginEmail"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginPassword"></label>
            <input asp-for="LoginPassword" class="form-control">
            <span asp-validation-for="LoginPassword"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        @* <button type="button" class="btn btn-danger" onclick = "closeLogin()">Close</button> *@
    </form>
</div>