<!-- @Model setup -->
<style>
    .btn{
        background-color: #2d3142;
        border: 1px solid #2d3142;
        color: white;
    }
    .btn-primary:hover {
        background-color: #3B0D11;
        border: 1px solid #3B0D11;
        color: white;
        opacity: 1;
    }
    .btn-primary:active:focus {
        background-color: #3B0D11;
        border: 1px solid #2d3142;
        color: white;
    }
    span{
        color: #3B0D11;
    }
</style>
<div class="container">
    <h1 class="text-center">Specific Generation</h1>
    <form action="/specific" method="get" class="form-container row">
        <div class="form-group col row">
            <label class="col-form-label col">Character Race</label>
                <select name = "selectedrace" class="col">
                    <option value = "Random"> Random </option>
                    <option value = "Dragonborn">Dragonborn </option>
                    <option value = "Dwarf"> Dwarf </option>
                    <option value = "Elf"> Elf </option>
                    <option value = "Gnome"> Gnome </option>
                    <option value = "Half Elf"> Half Elf </option>
                    <option value = "Half Orc"> Half Orc </option>
                    <option value = "Halfling"> Halfling </option>
                    <option value = "Human"> Human </option>
                    <option value = "Tiefling"> Tiefling </option>
                </select>
        </div>
        <div class="form-group col row">
            <label class="col-form-label col">Character Class</label>
                <select name = "selectedclass" class="col">
                    <option value = "Random"> Random </option>
                    <option value = "Barbarian" name="Barbarian">Barbarian </option>
                    <option value = "Bard" name="Bard"> Bard </option>
                    <option value = "Cleric" name="Cleric"> Cleric </option>
                    <option value = "Druid" name="Druid"> Druid </option>
                    <option value = "Fighter" name="Fighter"> Fighter </option>
                    <option value = "Monk" name="Monk"> Monk </option>
                    <option value = "Paladin" name="Paladin"> Paladin </option>
                    <option value = "Ranger" name="Ranger"> Ranger </option>
                    <option value = "Rogue" name="Rogue"> Rogue </option>
                    <option value = "Sorcerer" name="Sorcerer"> Sorcerer </option>
                    <option value = "Warlock" name="Warlock"> Warlock </option>
                    <option value = "Wizard"> Wizard </option>
                </select>
        </div>
        <div class="form-group col row">
            <label class="col-form-label col">Level</label>
            <select name = "selectedlevel" class="col">
                    <option value = "0"> Random </option>
                    <option value = "1"> 1 </option>
                    <option value = "2"> 2 </option>
                    <option value = "3"> 3 </option>
                    <option value = "4"> 4 </option>
                    <option value = "5"> 5 </option>
                    <option value = "6"> 6 </option>
                    <option value = "7"> 7 </option>
                    <option value = "8"> 8 </option>
                    <option value = "9"> 9 </option>
                    <option value = "10"> 10 </option>
                    <option value = "11"> 11 </option>
                    <option value = "12"> 12 </option>
                    <option value = "13"> 13 </option>
                    <option value = "14"> 14 </option>
                    <option value = "15"> 15 </option>
                    <option value = "16"> 16 </option>
                    <option value = "17"> 17 </option>
                    <option value = "18"> 18 </option>
                    <option value = "19"> 19 </option>
                    <option value = "20"> 20 </option>
                </select>
        </div>
        <button type="submit" class="btn btn-primary col">Generate</button>
        @* <button type="button" class="btn btn-danger" onclick = "closeLogin()">Close</button> *@
    </form>
</div>
